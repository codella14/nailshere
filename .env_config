# =============================================================================
# NAIL DETECTION CONFIGURATION
# =============================================================================
# This file contains all configurable parameters for the nail detection system
# Organized by functional categories for easy management

# =============================================================================
# HAND DETECTION SETTINGS
# =============================================================================
# MediaPipe hand detection configuration
HAND_DETECTION_MAX_HANDS=1
HAND_DETECTION_MODEL_COMPLEXITY=1
HAND_DETECTION_MIN_DETECTION_CONFIDENCE=0.6
HAND_DETECTION_MIN_TRACKING_CONFIDENCE=0.5

# =============================================================================
# NAIL VISIBILITY DETECTION METHODS
# =============================================================================
# Choose which method to use for nail visibility detection
# Options: 'hand_confidence', 'landmark_stability', 'custom_geometric', 'combined'
NAIL_VISIBILITY_METHOD=combined

# Hand Detection Confidence Method
HAND_CONFIDENCE_THRESHOLD=0.5
HAND_CONFIDENCE_ENABLED=true

# Landmark Stability Method
LANDMARK_STABILITY_ENABLED=false
LANDMARK_STABILITY_THRESHOLD=0.05
LANDMARK_STABILITY_HISTORY_LENGTH=10
LANDMARK_STABILITY_MIN_FRAMES=2

# Custom Geometric Method (Enhanced)
CUSTOM_GEOMETRIC_ENABLED=true
CUSTOM_GEOMETRIC_VISIBILITY_THRESHOLD=0.6
CUSTOM_GEOMETRIC_ANGLE_THRESHOLD=0.8
CUSTOM_GEOMETRIC_DISTANCE_THRESHOLD=0.05

# =============================================================================
# FINGER SELECTION SETTINGS
# =============================================================================
# Finger selection configuration
FINGER_SELECTION_ALL=true
FINGER_SELECTION_THUMB=true
FINGER_SELECTION_INDEX=true
FINGER_SELECTION_MIDDLE=true
FINGER_SELECTION_RING=true
FINGER_SELECTION_PINKY=true

# =============================================================================
# NAIL RENDERING SETTINGS
# =============================================================================
# Nail overlay configuration
NAIL_OPACITY=0.9
NAIL_BASE_SCALE=1.0
NAIL_CUSTOM_SCALE=1.0
NAIL_AUTO_SCALE=false
NAIL_ROTATION_OFFSET=0
NAIL_SMOOTHING=0.2

# Nail placement settings
NAIL_PLACEMENT_RATIO=1.1
NAIL_MOBILE_INDEX_OFFSET=0.05

# =============================================================================
# NAIL STABILIZATION SETTINGS
# =============================================================================
# Nail mask stabilization for smooth movement
NAIL_STABILIZATION_ENABLED=true
NAIL_STABILIZATION_MOVEMENT_THRESHOLD=10
NAIL_STABILIZATION_TRANSITION_SPEED=2
NAIL_STABILIZATION_MAX_TRANSITION_DISTANCE=50
NAIL_STABILIZATION_USE_EASING=true
NAIL_STABILIZATION_EASING_TYPE=easeOutCubic

# Movement Tolerance Settings
MOVEMENT_TOLERANCE_ENABLED=true
MOVEMENT_TOLERANCE_DURATION=500
MOVEMENT_TOLERANCE_CONFIDENCE_BOOST=0.2

# Rotation Stabilization Settings
ROTATION_STABILIZATION_ENABLED=true
ROTATION_STABILIZATION_THRESHOLD=0.3
ROTATION_STABILIZATION_HISTORY_LENGTH=5
ROTATION_STABILIZATION_SMOOTHING=0.3

# =============================================================================
# FINGER-SPECIFIC SCALING SETTINGS
# =============================================================================
# Dynamic scaling based on TIP-DIP distance for each finger
FINGER_SCALING_THUMB_MIN=0.02
FINGER_SCALING_THUMB_MAX=0.12
FINGER_SCALING_THUMB_BASE=0.70

FINGER_SCALING_INDEX_MIN=0.02
FINGER_SCALING_INDEX_MAX=0.15
FINGER_SCALING_INDEX_BASE=0.78

FINGER_SCALING_MIDDLE_MIN=0.02
FINGER_SCALING_MIDDLE_MAX=0.18
FINGER_SCALING_MIDDLE_BASE=0.91

FINGER_SCALING_RING_MIN=0.02
FINGER_SCALING_RING_MAX=0.16
FINGER_SCALING_RING_BASE=0.83

FINGER_SCALING_PINKY_MIN=0.02
FINGER_SCALING_PINKY_MAX=0.14
FINGER_SCALING_PINKY_BASE=0.73

# TIP-DIP distance thresholds
TIP_DIP_THRESHOLD=0.05
TIP_DIP_MIN_DISTANCE=0.02
TIP_DIP_MAX_DISTANCE=0.15

# =============================================================================
# DEBUG AND VISUALIZATION SETTINGS
# =============================================================================
# Debug information display
DEBUG_SHOW_HAND_LANDMARKS=false
DEBUG_SHOW_FINGER_NUMBERS=true
DEBUG_SHOW_DEBUG_INFO=false
DEBUG_SHOW_STABILIZATION_STATUS=true

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================
# Performance optimization settings
PERFORMANCE_MAX_FPS=30
PERFORMANCE_SKIP_FRAMES=false
PERFORMANCE_FRAME_SKIP_INTERVAL=1

# =============================================================================
# ERROR HANDLING SETTINGS
# =============================================================================
# Error handling and recovery
ERROR_HANDLING_MAX_RETRIES=3
ERROR_HANDLING_RETRY_DELAY=1000
ERROR_HANDLING_ROI_RECOVERY=true
ERROR_HANDLING_VIDEO_VALIDATION=true

# =============================================================================
# MOBILE OPTIMIZATION SETTINGS
# =============================================================================
# Mobile-specific optimizations
MOBILE_DETECTION_ENABLED=true
MOBILE_TOUCH_DETECTION=true
MOBILE_SCREEN_WIDTH_THRESHOLD=768
MOBILE_PERFORMANCE_MODE=false
